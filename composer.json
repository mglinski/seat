{
	"name": "eve-seat/seat",
	"description": "SeAT - Simple EVE Online API Tool",
	"keywords": ["api", "tool", "eve", "online", "corporation", "management"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
		"3rdpartyeve/phealng": "1.3.*",
		"rmccue/requests": ">=1.0",
		"indatus/dispatcher": "1.4.*",
		"barryvdh/laravel-debugbar": "~1.8"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/commands/scheduled",
			"app/controllers",
			"app/models",
			"app/queues",
			"app/eveapi",
			"app/notifications",
			"app/database/migrations",
			"app/database/seeds",
			"app/services",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php -r \"copy('app/config/env-sample.php', '.env.php');\"",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate",
			"php -r \"copy('app/config/env-sample.php', '.env.php');\""
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
